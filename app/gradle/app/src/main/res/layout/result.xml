<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F2835">

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/logo" />

    <TextView
        android:id="@+id/textRouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:fontFamily="Lato"
        android:text="Router name"
        android:textColor="#999999"
        android:textIsSelectable="false"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageRouterImage"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="Lato Medium"
        android:text="Default settings"
        android:textColor="#999999"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textFirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageRouterImage2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="Lato Medium"
        android:text="Firmware version"
        android:textColor="#999999"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textEncrypt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageRouterImage3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:fontFamily="Lato Medium"
        android:text="Encryption protocol"
        android:textColor="#999999"
        android:textSize="20dp" />

    <Button
        android:id="@+id/buttonRescan"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="#1F2835"
        android:text="tap to rescan"
        android:textColor="#999999" />

    <ImageView
        android:id="@+id/imageRouterImage"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textRouter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/button" />

    <ImageView
        android:id="@+id/imageRouterImage2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageRouterImage"
        android:layout_below="@+id/imageRouterImage"
        android:src="@drawable/button" />

    <ImageView
        android:id="@+id/imageRouterImage3"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/imageRouterImage2"
        android:layout_below="@+id/imageRouterImage2"
        android:src="@drawable/button" />

    <ImageButton
        android:id="@+id/buttonToDefalut"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignEnd="@+id/imageRouterImage"
        android:layout_alignTop="@+id/textDefault"
        android:layout_marginTop="5dp"
        android:background="#1F2835"
        android:scaleType="fitXY"
        android:src="@drawable/pressbutton" />

    <ImageButton
        android:id="@+id/buttonToFirm"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/textFirm"
        android:layout_alignEnd="@+id/imageRouterImage2"
        android:layout_marginBottom="5dp"
        android:background="#1F2835"
        android:scaleType="fitXY"
        android:src="@drawable/pressbutton" />

    <ImageButton
        android:id="@+id/buttonToEncryption"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/textEncrypt"
        android:layout_alignEnd="@+id/imageRouterImage3"
        android:layout_marginBottom="5dp"
        android:background="#1F2835"
        android:scaleType="fitXY"
        android:src="@drawable/pressbutton" />

</RelativeLayout>