<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/item_testName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="Lato Medium"
        android:text="Default settings"
        android:textColor="#999999"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="20dp"/>

    <ProgressBar
        android:id="@+id/item_testProgressBar"
        style="@style/GenericProgressIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_testName"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="-90dp"
        android:layout_toStartOf="@+id/item_testName"
        android:indeterminate="false" />

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/item_testName"
        android:layout_alignEnd="@+id/item_testProgressBar"
        android:layout_marginBottom="1dp"
        android:layout_marginRight="-3dp"
        android:src="@drawable/rejected" />
</RelativeLayout>